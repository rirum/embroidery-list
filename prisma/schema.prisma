generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model floss {
  id         Int       @id @default(autoincrement())
  codigo     String
  nomemarca  String    @db.VarChar(100)
  flossid    String    @db.VarChar(20)
  flossimg   String?
  descricao  String?
  red        Int?      @db.SmallInt
  blue       Int?      @db.SmallInt
  green      Int?      @db.SmallInt
  usuario_id Int?
  usuarios   usuarios? @relation(fields: [usuario_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model usuarios {
  id    Int     @id @default(autoincrement())
  nome  String  @db.VarChar(100)
  senha String  @db.VarChar(100)
  email String  @db.VarChar(100)
  floss floss[]
}
