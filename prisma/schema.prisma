generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Floss {
  id          Int    @id @default(autoincrement())
  code        String
  brandName   String @db.VarChar(100)
  flossId     String @db.VarChar(20)
  flossImg    String @default("")
  description String @default("")
  red         Int?   @db.SmallInt
  blue        Int?   @db.SmallInt
  green       Int?   @db.SmallInt
  userId      Int
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("floss")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String    @db.VarChar(100)
  password String    @db.VarChar(100)
  email    String    @db.VarChar(100)
  floss    Floss[]
  Session  Session[]

  @@map("user")
}

model Session {
  id     Int    @id @default(autoincrement())
  userId Int
  token  String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "sessao_userId_foreign")

  @@map("session")
}
